{
  "name": "happy-robot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:ws": "tsx lib/websocket-server.ts",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:ws\"",
    "build": "prisma generate && next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:websocket": "jest --testPathPattern=__tests__/integration/websocket",
    "test:setup": "jest --setupFilesAfterEnv=__tests__/setup/global-setup.ts",
    "test:db:start": "./scripts/test-db.sh start",
    "test:db:stop": "./scripts/test-db.sh stop",
    "test:db:reset": "./scripts/test-db.sh reset",
    "test:db:status": "./scripts/test-db.sh status",
    "env:setup-test": "node scripts/env-setup.js setup-test",
    "env:setup-production": "node scripts/env-setup.js setup-production",
    "env:validate": "node scripts/env-setup.js validate",
    "env:show-test": "node scripts/env-setup.js show-test",
    "env:show-production": "node scripts/env-setup.js show-production",
    "schema:verify": "node scripts/verify-schema-simple.js",
    "schema:verify-migration": "node scripts/test-migration-schema.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.1",
    "@prisma/client": "^5.22.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "next": "15.5.4",
    "prisma": "^5.22.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "svix": "^1.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^2.5.4",
    "uuid": "^10.0.0",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^9.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "msw": "^2.11.3",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "tsx": "^4.19.2",
    "typescript": "^5",
    "util": "^0.12.5",
    "ws": "^8.18.3"
  }
}
