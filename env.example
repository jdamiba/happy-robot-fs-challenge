# Happy Robot Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# CLERK AUTHENTICATION (Required)
# =============================================================================
# Get these from your Clerk dashboard: https://clerk.com/dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Clerk URL Configuration
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/projects
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/projects

# =============================================================================
# DATABASE (Required)
# =============================================================================
# For local development with Docker:
DATABASE_URL=postgresql://happyrobot:happyrobot123@localhost:5432/happyrobot

# For production, replace with your actual database URL:
# DATABASE_URL=postgresql://username:password@host:5432/database

# =============================================================================
# WEBSOCKET SERVER (Required)
# =============================================================================
# For local development:
NEXT_PUBLIC_WS_URL=ws://localhost:3001/ws
WEBSOCKET_SERVER_URL=http://localhost:3001

# For production, replace with your actual WebSocket server URL:
# NEXT_PUBLIC_WS_URL=wss://your-websocket-server.com/ws
# WEBSOCKET_SERVER_URL=https://your-websocket-server.com

# =============================================================================
# ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# CLERK WEBHOOK (Optional - for production)
# =============================================================================
# Get this from your Clerk webhook configuration
# CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret_here
